doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    script(src='/vendor/javascripts/jquery.js')
    if user
      div
        span Welcome back #{user.username}!
    else
      //- for the love of God please read up on Jade to make this prettier
      div
        p
          a(href='/register') Please register
        p or
        p
          a(href='/login') login

    block content
